<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BtnTrigger" TargetType="Button">
        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="False"/>
                    <Condition Property="IsEnabled" Value="True"/>
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="Background" Value="Yellow"/>
                    <Setter Property="Content" Value="JSON"/>
                </MultiTrigger.Setters>
            </MultiTrigger>
            <EventTrigger RoutedEvent="Button.Click">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation                          
                            Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                            To="#FFFFA3A3" Duration="0:0:0.5"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <DataTrigger Binding="{Binding ElementName=jsonCheck, Path=IsMouseOver}" Value="True">
                <Setter Property="Content" Value="Открыть"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>