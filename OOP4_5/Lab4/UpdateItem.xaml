        <Label x:Name="SelectedItem" Content="" HorizontalAlignment="Left" Margin="101,30,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="catValue" HorizontalAlignment="Left" Margin="119,169,0,0" VerticalAlignment="Top" Width="120">
