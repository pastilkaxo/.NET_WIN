<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate TargetType="Button" x:Key="closeBtn">
        <Border CornerRadius="25" BorderBrush="CadetBlue" BorderThickness="2"
                    Background="LightBlue" Height="40" Width="100" >
            <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Path Fill="Black" Stroke="Black" StrokeThickness="1"
          Data="M 10,0 L 0,5 L 10,10 Z"/>
            </ContentControl>
        </Border>
    </ControlTemplate>
    <ControlTemplate TargetType="Button" x:Key="UndoBtn">
            <Border CornerRadius="10" BorderBrush="Red" Background="LightPink" Height="40" Width="100" BorderThickness="2">
            <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Undo | Отмена" Foreground="White" FontWeight="Bold"></ContentControl>
            </Border>
    </ControlTemplate>
    <ControlTemplate TargetType="Button" x:Key="RedoBtn">
        <Border CornerRadius="10" BorderBrush="LightCoral" Background="Green" Height="40" Width="100" BorderThickness="2">
            <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Redo | Повтор" Foreground="White" FontWeight="Bold"></ContentControl>
        </Border>
    </ControlTemplate>
</ResourceDictionary>